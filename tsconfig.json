{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"]
}
